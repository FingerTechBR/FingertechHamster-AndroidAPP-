<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teste5"
    tools:context=".Cadastro">

    <EditText
        android:id="@+id/login_txt_nome"
        android:layout_width="294dp"
        android:layout_height="54dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="304dp"
        android:background="#77020202"
        android:drawableLeft="@drawable/ic_person_black_34dp"
        android:drawablePadding="10dip"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Digite seu nome"
        android:includeFontPadding="false"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_txt_email"
        android:layout_width="294dp"
        android:layout_height="54dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:background="#77020202"
        android:drawableLeft="@drawable/ic_email_black_34dp"
        android:drawablePadding="10dip"
        android:ems="10"
        android:hint="Digite seu Email"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_txt_nome" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="361dp"
        android:layout_height="222dp"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoFingertech"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/login_btn_entrar"
        android:layout_width="294dp"
        android:layout_height="54dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="60dp"
        android:background="#AD020202"
        android:text="Entrar"
        android:textColor="@android:color/white"
        android:theme="@style/fg_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_txt_email" />

    />

</androidx.constraintlayout.widget.ConstraintLayout>